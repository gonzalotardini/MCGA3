@model ASF.UI.Process.CartCompleta
@{
    ViewBag.Title = "Index";
    var total = 0;
}

<style>
   
</style>


<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Descripcion</th>                        
                        <th>Quantity</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Total</th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>  
                   
                @foreach (var item in Model.detalle)
                {
                    var subtotal = item.Price * item.Quantity;
                  
                    total = total +Convert.ToInt32(subtotal);
                    <tr>
                        <td class="col-sm-8 col-md-2">
                            <br />
                            <div class="media">
                                <img src="@Url.Action("Images", "Cart", new { id = item.ProductId })" width="90" height="90" />
                            </div>
                              
                        </td>
                        <td>
                            <br />
                            <br />
                            <br />
                            <div class="media-body">
                                <h4 class="media-heading">@item.Pdescripcion</h4>
                            </div>
                        </td>
                       
                        <td class="col-sm-1 col-md-1" style="text-align: center">
                            <br />
                            <br />
                            
                            <input type="number" class="form-control" id="exampleInputEmail1" value=@item.Quantity>
                        </td>
                        <td class="col-sm-1 col-md-1 text-center">
                            <br />
                            <br />
                        <strong>$@item.Price</strong>
                        </td>
                        <td class="col-sm-1 col-md-1 text-center">
                            <br />
                            <br />
                            
                        <strong>$@subtotal</strong>
                        </td>
                        <td class="col-sm-1 col-md-1">
                            <br />
                            <br />
                            <button type="button" class="btn btn-danger">
                              
                                <span class="fa fa-remove"></span> Remove
                            </button>
                        </td>
                    </tr>
                }
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h3>Total</h3></td>
                        <td class="text-right"><h3><strong>$@total</strong></h3></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td>
                           
                            @*<a href="@Url.Action("Index", "Product")" class="btn btn-primary">                               
                                <span id="span" class="fa fa-shopping-cart"> Continue Shopping</span>
                            </a>*@
                            @Html.ActionLink("Continue Shopping", "Index", "Product",null, new { @class = "btn btn-info" });

                            @*<li><a id="a" href="@Url.Action("Index","Product")"><span aria-hidden="true" class="btn btn-success fa-shopping-cart"></span> ContinueShopping</a></li>*@
                        </td>
                        <td>
                            <button type="button" hr class="btn btn-success">
                                Checkout <span class="glyphicon glyphicon-play"></span>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>









